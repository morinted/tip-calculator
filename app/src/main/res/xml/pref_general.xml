<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="PERS"
        android:title="@string/pref_default_tip"
        android:defaultValue="@integer/default_tip"
        android:selectAllOnFocus="true"
        android:inputType="numberDecimal"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:key="SIGN"
        android:title="@string/pref_title_currency_sign"
        android:defaultValue="0"
        android:entries="@array/pref_currency_sign_options"
        android:entryValues="@array/pref_currency_sign_vals"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>
